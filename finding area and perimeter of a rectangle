#include <iostream>
using namespace std;
int main()
{
    float l,b,perimeter,area;
    cout<<"enter the length and breadth of rectangle:";
    cin>>l>>b;
    area = l*b;
    perimeter=2*(l+b);
    cout<<"the area of rectangle of length "<< l <<" and breadth "<< b <<" is:"<<area;
    cout<<"the perimeter of rectangle having length "<< l <<" and breadth "<< b <<" is:"<<perimeter;
return 0;
}
