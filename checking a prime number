#include <iostream>

using namespace std;
int main(){
    int n, t=0;
    cout<<"enter the number:";
    cin>>n;
    for(int i=2;i<=n;i++){ 
          if(n%i==0){
            t++;
          }
    }
    if(t==1){
        cout<<"it is a prime number";
    }
    else{
        cout<<"it is not a prime number";
    }
  return 0;
}
